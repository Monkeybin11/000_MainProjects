<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WaferAlignErrorCalulator">


    <Style x:Key="CernterBase" TargetType="Control">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="basicBtn" BasedOn="{StaticResource CernterBase}" TargetType="Button">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Width" Value="110"/>
    </Style>

    <Style x:Key="winformhost"  BasedOn="{StaticResource CernterBase}" TargetType="WindowsFormsHost">
        
    </Style>

    <Style x:Key="basicLbl" BasedOn="{StaticResource CernterBase}" TargetType="Label">
        <Setter Property="FontSize" Value="11"/>
    </Style>


</ResourceDictionary>